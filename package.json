{
  "name": "deepl-cli",
  "version": "0.1.0",
  "description": "Next-generation CLI for DeepL translation and writing enhancement",
  "main": "dist/index.js",
  "bin": {
    "deepl": "dist/cli/index.js"
  },
  "scripts": {
    "dev": "ts-node src/cli/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "deepl",
    "translation",
    "cli",
    "i18n",
    "localization",
    "translation-tool",
    "command-line",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "deepl-node": "^1.11.0",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "cli-table3": "^0.6.3",
    "better-sqlite3": "^9.2.2",
    "conf": "^12.0.0",
    "chokidar": "^3.5.3",
    "fast-glob": "^3.3.2",
    "mime-types": "^2.1.35",
    "yaml": "^2.3.4",
    "xml2js": "^0.6.2",
    "date-fns": "^2.30.0",
    "lodash": "^4.17.21",
    "p-limit": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@types/lodash": "^4.14.202",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.10.6",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.1",
    "jest": "^29.7.0",
    "memfs": "^4.6.0",
    "nock": "^13.5.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/deepl-cli.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/deepl-cli/issues"
  },
  "homepage": "https://github.com/yourusername/deepl-cli#readme"
}
