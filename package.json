{
  "name": "deepl-cli",
  "version": "0.9.1",
  "description": "Next-generation CLI for DeepL translation and writing enhancement",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "deepl": "dist/cli/index.js"
  },
  "scripts": {
    "dev": "ts-node src/cli/index.ts",
    "build": "tsc && chmod +x dist/cli/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "examples": "bash examples/run-all.sh",
    "examples:fast": "bash examples/run-all.sh --fast",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "deepl",
    "translation",
    "cli",
    "i18n",
    "localization",
    "translation-tool",
    "command-line",
    "typescript"
  ],
  "author": "Steven Syrek",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "better-sqlite3": "^11.7.0",
    "chalk": "^5.3.0",
    "chokidar": "^4.0.3",
    "cli-table3": "^0.6.5",
    "commander": "^12.1.0",
    "fast-glob": "^3.3.3",
    "form-data": "^4.0.4",
    "inquirer": "^12.2.0",
    "minimatch": "^9.0.5",
    "ora": "^8.1.1",
    "p-limit": "^6.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/better-sqlite3": "^7.6.8",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "diff": "^8.0.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.1",
    "jest": "^29.7.0",
    "memfs": "^4.6.0",
    "nock": "^13.5.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://git.deepl.dev/hack-projects/deepl-cli"
  },
  "bugs": {
    "url": "https://git.deepl.dev/hack-projects/deepl-cli/-/issues"
  },
  "homepage": "https://git.deepl.dev/hack-projects/deepl-cli#readme"
}
